generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Question {
  id            String   @id @default(cuid())
  question      String
  optionA       String
  optionB       String
  optionC       String
  optionD       String
  correctAnswer String
  difficulty    String
  themes        String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
